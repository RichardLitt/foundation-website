<div class="content-container">
  <h2>Get in Touch!</h2>
  <div class="card">
    <div>
      <h3>Sign up for our newsletter</h3>
      <form class="sign-up-form" action="/api/newsletter" method="POST">
        <label for="email" class="hidden">Email address</label>
        <input name="email" type="email" placeholder="Type your email here" required="true" />
        

        <button type="submit">Sign up</button>
      </form>
      <div class="form-submitted-message">
        Thank you!
      </div>
    </div>


    <div>
      <h3>Connect with us on:</h3>
      <%- await include('/social-links.ejs') %>
      <p>
        Do not hesitate to reach out!
      </p>
    </div>
  </div>
</div>