<h2>We are a group of committed people you can reach out to.</h2>

<% 
const peopleByDepartment = _.groupBy(people.people, 'department'); 
const countryByCode = _.keyBy(geography.countries, 'code'); %> 

<%
people.departments.forEach((department) => { 
%>

<h3 class="department-heading"><%= department %></h3>

<ul class="people-grid">
  <% (peopleByDepartment[department] ?? []).forEach((person) => { %>
  <li class="person">
    <img class="person-image" src="<%- person.profileImage %>" alt="<%= person.name %>"/>
    <div>
      <div class="person-name"><%= person.name %></div>
      <div class="person-title"><%= person.title %></div>
      <div class="person-location">
        <%_ if (person.administrativeArea) { _%> 
          <%= person.administrativeArea %>,&nbsp; 
          <%_ } _%> 
          <%= countryByCode[person.country].label _%>&nbsp;
          <span class="flag" data-country-code="<%=person.country %>"><%#flag emoji inserted by frontend script%></span>
      </div>
      <div class="person-links">
        <% if (person.twitterUrl) { %>
        <a class="twitter" href="<%- person.twitterUrl %>" target="_blank"> Twitter </a>
        <% } %> <% if (person.linkedInUrl) { %>
        <a class="linkedin" href="<%- person.linkedInUrl %>" target="_blank"> LinkedIn </a>
        <% } %> <% if (person.instagramUrl) { %>
        <a class="instagram" href="<%- person.instagramUrl %>" target="_blank"> Instagram </a>
        <% } %> <% if (person.websiteUrl) { %>
        <a class="www" href="<%- person.websiteUrl %>" target="_blank"> Website </a>
        <% } %>
      </div>
    </div>
  </li>
  <% }); %>
</ul>

<% }); %>

<script src="/assets/scripts/renderFlags.js"></script>